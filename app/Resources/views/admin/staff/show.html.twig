{% extends 'admin/layout.html.twig' %}

{% block title 'Show Staff' %}

{% block actions %}
    {{ include('admin/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ staff.username|default }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ staff.name|default }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ staff.email|default }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ staff.address|default }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ staff.phone|default }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ staff.note|default }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in staff.userRoles %}
                        <div>{{ role.name }}</div>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
