{% extends 'master/layout.html.twig' %}

{% block title 'Show Customer' %}

{% block actions %}
    {{ include('master/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ customer.code|default }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name|default }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ customer.company|default }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address|default }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone|default }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ customer.fax|default }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email|default }}</td>
            </tr>
            <tr>
                <th>Tax Number</th>
                <td>{{ customer.taxNumber|default }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ customer.note|default }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{{ customer.isActive|default ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
