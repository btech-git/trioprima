{% extends 'master/layout.html.twig' %}

{% block title 'Show Product' %}

{% block actions %}
    {{ include('master/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ product.code|default }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name|default }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ product.size|default }}</td>
            </tr>
            <tr>
                <th>Physical Code</th>
                <td>{{ product.physicalCode|default }}</td>
            </tr>
            <tr>
                <th>Minimum Stock</th>
                <td>{{ product.minimumStock|default }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{{ product.isActive|default ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
