{% extends 'report/layout.html.twig' %}

{% block title 'Report Purchase Invoice Summary' %}

{% block content %}
    <div id="purchase-invoice-summary-grid" data-grid="{{ path('report_purchase_invoice_summary_grid') }}"></div>
{% endblock %}

{% block stylesheets_include %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('../app/Resources/public/css/report.css') }}" />
{% endblock %}

