{% endblock extends %}

{% block body %}
{{ "{% block title '" ~ 'Add ' ~ entity_singularized|humanize|title ~ "' %}" }}

{{ "{% block actions %}" }}
    {{ "{{ include('" ~ entity|lower|replace({'\\': '/', (entity_singularized|lower): 'actions'}) ~ ".html.twig') }}" }}
{{ "{% endblock %}" }}

{{ "{% block content %}" }}
    {{ '{{ form_start(form) }}' }}
        {{ '{{ form_widget(form) }}' }}
