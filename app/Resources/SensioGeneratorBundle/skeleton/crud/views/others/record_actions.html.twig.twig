    <ul class="list-inline">
        {%- if ('index' in actions) and (not hide_index) %}

        <li>
            <a class="btn btn-primary" href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}">
                <span class="glyphicon glyphicon-list"></span> Manage
            </a>
        </li>

        {%- endif %}

        {%- if ('show' in actions) and (not hide_show) %}

        <li>
            <a class="btn btn-info" href="{{ "{{ path('" ~ route_name_prefix ~ "_show', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
                <span class="glyphicon glyphicon-info-sign"></span> Show
            </a>
        </li>

        {%- endif %}

        {%- if ('new' in actions) and (not hide_new) %}

        <li>
            <a class="btn btn-success" href="{{ "{{ path('" ~ route_name_prefix ~ "_new') }}" }}">
                <span class="glyphicon glyphicon-plus"></span> Add
            </a>
        </li>

        {%- endif %}

        {%- if ('edit' in actions) and (not hide_edit) %}

        <li>
            <a class="btn btn-warning" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
        </li>

        {%- endif %}

        {%- if ('delete' in actions) and (not hide_delete) %}

        <li>
            {{ '{{ form_start(delete_form) }}' }}
                <button class="btn btn-danger" type="submit">
                    <span class="glyphicon glyphicon-remove"></span> Delete
                </button>
            {{ '{{ form_end(delete_form) }}' }}
        </li>

        {%- endif %}

    </ul>
